<nav class=" w-full py-7 bg-neutral">
  <div class="container mx-auto flex justify-between px-8">
    <LinkTo @route="index">
      <div class="text-2xl font-bold pr-20 mt-1.5">ArtVault</div>
    </LinkTo>
    <ul class="flex space-x-8 items-center">
      <LinkTo @route="auctions" class="hover:text-gray-700 font-semibold hover:underline decoration-tint underline-offset-4 decoration-2">Auctions</LinkTo>
      <LinkTo @route="add-auction" class="hover:text-gray-700 font-semibold hover:underline decoration-tint underline-offset-4 decoration-2">Add Auction</LinkTo>
      <LinkTo @route="add-art" class="hover:text-gray-700 font-semibold hover:underline decoration-tint underline-offset-4 decoration-2">Add Art</LinkTo>
    </ul>
    <div class="flex space-x-4">
      <Button @buttonStyleType="ghost" @size="small">Sign up</Button>
      {{#if this.auth.user}}
        <Button @buttonStyleType="outline-white" @size="small" @onClick={{this.logout}}>Log out</Button>
      {{else}}
        <Button @buttonStyleType="outline-white" @size="small" @onClick={{this.login}}>Log in</Button>
      {{/if}}
    </div>
  </div>
</nav>