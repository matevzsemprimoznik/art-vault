<div class="px-4 py-4 w-full text-left border-none outline-none transition duration-300 ease">
  <button class="cursor-pointer py-2 px-1 w-full text-left flex justify-between items-center border-b-2 border-b-gray-200" type="button" {{on "click" this.toggleContent}}>
    <p>{{@title}}</p>
    {{#if this.isOpen}}
      <i class="fas fa-chevron-up"></i>
    {{else}}
      <i class="fas fa-chevron-down"></i>
    {{/if}}
  </button>

  <div class="accordion-content" style="max-height: {{this.maxHeight}};">
      {{yield}}
  </div>
</div>
