<LinkTo @route="auction" @model={{@auction.id}} >
  <div class="bg-white rounded-lg shadow-lg overflow-hidden cursor-pointer">
    <img src={{get @auction.items "0.image"}} alt="Art" class="w-full h-64 object-cover rounded-t-lg  hover:scale-105 transition-transform duration-300 ease-in-out transform">
    <div class="px-4 py-2.5 mt-2 border-l-2 border-l-tint flex items-center justify-between">
      <h2 class="text-md font-semibold max-w-[62%] cut-text">{{@auction.name}}</h2>
      <div>
        <p class="text-xs text-gray-500">Current Bid</p>
        <p class="text-md font-semibold">{{@auction.price}}</p>
      </div>
    </div>
    <div class="p-4">
      {{#if (eq this.selectedId @auction.id)}}
        <BiddingButtons @auction={{@auction}}></BiddingButtons>
      {{else}}
        <Button @class="w-full" @size="small" @buttonStyleType="outline" @onClick={{stop-propagation (fn this.onClickPlaceBid @auction.id)}}>
          Place a Bid
        </Button>
      {{/if}}
    </div>
  </div>
</LinkTo>